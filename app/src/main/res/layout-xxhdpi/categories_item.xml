<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="7dp"
    app:cardPreventCornerOverlap="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="2dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="24sp"
                android:gravity="start"
                android:maxLines="1"
                android:text="Beginners Words "
                android:textColor="#36C398"
                android:textIsSelectable="true"
                android:textScaleX="0.8"
                android:fontFamily="sans-serif"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/categories_color"
                android:layout_marginTop="2dp"
android:layout_gravity="center_vertical"
                android:background="@drawable/level_round_a"
                android:layout_width="12dp"
                android:layout_height="12dp"
                />
            <TextView
                android:id="@+id/current_level"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="0"
                android:textStyle="normal"
                android:textColor="#000"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="-"
                android:layout_gravity="center_vertical"

                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginStart="1dp"
                />
            <TextView
                android:id="@+id/number_of_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"

                android:text="5"
                android:textStyle="normal"
                android:textColor="#000"
                android:layout_marginStart="1dp"
                />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:gravity="bottom"
            >
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:progressBarStyleHorizontal"
                android:progress="20"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_indecator_categories"/>

            <ImageButton
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:layout_alignParentEnd="true"                        app:srcCompat="@drawable/ic_ask" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/locked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="Locked"
            android:textColor="#90000000"
            android:textSize="32sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>




