<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Excercise_Levels">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="#EDF3F3"
      >

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:textSize="24sp"
      android:textColor="#000"
      android:textStyle="bold"
      android:text="Biginners Words"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's start finishing the beginner level"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/miniTitleColor"
        android:textSize="14sp"
        />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_exam_items"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      tools:listitem="@layout/exams_level_item"
      />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>